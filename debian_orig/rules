#!/usr/bin/make -f

%:
	dh $@ --with autoreconf

override_dh_shlibdeps:
	dpkg-shlibdeps -Tdebian/vscpl1drv-socketcan.substvars $$(pwd)/debian/vscpl1drv-socketcan%MAJOR-VERSION/usr/lib/%SUBFOLDER/vscpl1drv-socketcan.so.%MAJOR-VERSION.%MINOR-VERSION.%RELEASE-VERSION


override_dh_auto_install:
	strip linux/vscpl1drv-socketcan.so.%MAJOR-VERSION.%MINOR-VERSION.%RELEASE-VERSION

